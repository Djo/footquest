!!!
%html
  %head
    %title Footquest
    = stylesheet_link_tag :all, :recursive => true
    = javascript_include_tag :defaults
    = yield :head
    = csrf_meta_tag
  %body
    #wrapper
      %p.notice= notice
      %p.alert= alert
      
      %ul#navigation
        %li{ :class => active_on('quests') }= link_to 'Квесты', quests_path
        %li{ :class => active_on('users') }= link_to 'Пользователи', users_path
      
      %ul#user_menu
        - if signed_in?
          %li= link_to 'Профиль', user_path(current_user)
          %li= link_to 'Выйти', destroy_user_session_path
        - else
          %li= link_to 'Войти', new_user_session_path
      
    
      = yield
