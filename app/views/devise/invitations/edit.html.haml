%h2 Новый пароль

= semantic_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |form|
  = devise_error_messages!
  = form.hidden_field :invitation_token

  = form.inputs do
    = form.input :password
    = form.input :password_confirmation
  = form.buttons do
    = form.commit_button 'Сохранить'
